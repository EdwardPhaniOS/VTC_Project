<Page
    x:Class="LaborLawHandBook.Page_SearchResult"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaborLawHandBook"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>

            <TextBlock FontSize="16" MaxHeight="100" TextWrapping="WrapWholeWords"  FontWeight="Bold"  Height="auto" 
                                                   Text="{Binding QuestionAndAnswer.cau_hoi}"/>
            <TextBlock FontSize="13" MaxHeight="500" TextWrapping="WrapWholeWords"  FontWeight="Light"  Height="auto" 
                                                   Text="{Binding QuestionAndAnswer.dap_an}"/>

        </StackPanel>
    </Grid>
</Page>
